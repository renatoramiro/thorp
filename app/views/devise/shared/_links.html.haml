- if controller_name != 'sessions'
  = link_to "Entrar", login_path
  %br
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to "Criar Conta", register_path
  %br
- if devise_mapping.recoverable? && controller_name != 'passwords'
  = link_to "Esqueceu sua senha?", recover_password_path
  %br
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to "Não recebeu as instruções para confirmação?", new_confirmation_path(resource_name)
  %br
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to "Não recebeu as instruções para efetuar o desbloqueio?", new_unlock_path(resource_name)
  %br
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to "Entrar com #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider)
    %br