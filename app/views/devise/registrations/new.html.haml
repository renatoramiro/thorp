.row
  .offset4.span4
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-signin'}) do |f|
      - if @user.errors.any?
        #error_explanation.alert.alert-error
          %h4 Alguns erros aconteceram:
          %ul
            - @user.errors.full_messages.each do |msg|
              %li= msg
      %h2.form-signin-heading Crie sua conta
      = f.label :username, 'Nome de Usuário'
      = f.text_field :username
      = f.label :email
      = f.email_field :email
      = f.label :password, 'Senha'
      = f.password_field :password
      = f.label :password_confirmation, 'Confirmação da Senha'
      = f.password_field :password_confirmation
      = f.submit "Criar", class: 'btn btn-large btn-primary'
      = render "devise/shared/links"